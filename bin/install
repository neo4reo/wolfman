#!/bin/sh

BLUE='\033[1;36m'
NC='\033[0m' # No Color

eval "$(rbenv init -)"

IFS=$'\n' read -rd '' -a versions <<< "$(rbenv versions --bare)"

for version in "${versions[@]}"
do
  echo "Installing ${BLUE}wolfman${NC} for ruby version ${BLUE}$version${NC}"
  rbenv shell "$version"
  bundle
  bundle exec rake install
done
